<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/downloadedImage"
        android:layout_width="231dp"
        android:layout_height="231dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="41dp" />

    <ImageView
        android:id="@+id/processedImage"
        android:layout_width="231dp"
        android:layout_height="231dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="317dp" />

    <TextView
        android:id="@+id/erythrocytes"
        android:layout_width="340dp"
        android:layout_height="49dp"
        android:text="Количество эритроцитов:"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="587dp" />

    <Button
        android:id="@+id/download"
        android:layout_width="122dp"
        android:layout_height="58dp"
        android:text="Button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="657dp"
        android:onClick="downloadClick" />

    <Button
        android:id="@+id/treatment"
        android:layout_width="122dp"
        android:layout_height="58dp"
        android:text="Button"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="657dp"
        android:onClick="treatmentClick"/>


    <TextView
        android:id="@+id/number"
        android:layout_width="110dp"
        android:layout_height="58dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="657dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
